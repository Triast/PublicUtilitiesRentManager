@model PublicUtilitiesRentManager.WebUI.Models.PaymentViewModel

@{
    ViewData["Title"] = "Редактирование";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Payments" asp-action="Index">Оплаты</a></li>
        <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
    </ol>
</nav>

<h1>@ViewData["Title"]</h1>

<h4>Оплата</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <input type="hidden" id="ContractId" name="ContractId" value="@Model.ContractId" />
            <div class="form-group">
                <label asp-for="Tenant" class="control-label"></label>
                <input asp-for="Tenant" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <input asp-for="Room" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="AccrualType" class="control-label"></label>
                <input asp-for="AccrualType" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PaymentOrderNumber" class="control-label"></label>
                <input asp-for="PaymentOrderNumber" class="form-control" />
                <span asp-validation-for="PaymentOrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summ" class="control-label"></label>
                <input asp-for="Summ" class="form-control" />
                <span asp-validation-for="Summ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>


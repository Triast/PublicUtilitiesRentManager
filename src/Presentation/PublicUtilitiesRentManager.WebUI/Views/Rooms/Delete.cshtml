@model RoomViewModel

@{
    ViewData["Title"] = "Удаление";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Rooms" asp-action="Index">Помещения</a></li>
        <li class="breadcrumb-item active" aria-current="page">Удаление</li>
    </ol>
</nav>

<h1>Удаление</h1>

<h3>Вы уверены, что желаете удалить это помещение?</h3>
<div>
    <h4>Помещение</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Square)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Square)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsOccupied)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsOccupied)
        </dd>
    </dl>

    <form asp-action="DeleteConfirm" asp-route-id="@Model.Address">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
